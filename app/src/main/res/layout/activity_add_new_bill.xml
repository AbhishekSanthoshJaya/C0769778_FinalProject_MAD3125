<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PersonInformationEntryActivity">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtFirstName"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="716dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="#000000"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeErrorColor="#10FDF9"
            app:boxStrokeWidth="4dp"
            app:errorEnabled="false"
            app:errorIconTintMode="src_atop"
            app:errorTextColor="#10FDF9"
            app:hintTextColor="#020000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@android:drawable/ic_menu_my_calendar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFirstNameText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext"
                android:cursorVisible="true"
                android:fontFamily="@font/acme"
                android:hint="MANUFACTURER NAME"
                android:textColor="#050000"
                android:textColorHint="#050000"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtBillId"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="796dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="#000000"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeErrorColor="#10FDF9"
            app:boxStrokeWidth="4dp"
            app:errorEnabled="false"
            app:errorTextColor="#10FDF9"
            app:hintTextColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@android:drawable/ic_menu_info_details">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtBillIdText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext"
                android:cursorVisible="true"
                android:fontFamily="@font/acme"
                android:hint="ENTER BILL ID"
                android:textColor="#050000"
                android:textColorHint="#050000"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="891dp"
            android:fontFamily="@font/acme"
            android:text="BILL ADDITION FORM"
            android:textColor="@color/colorPrimary"
            android:textColorHighlight="#00FFFFFF"
            android:textColorHint="#00FFFFFF"
            android:textColorLink="#00FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtBillDate"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="412dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="571dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="#000000"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeErrorColor="#10FDF9"
            app:boxStrokeWidth="4dp"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:errorTextColor="#10FDF9"
            app:hintTextColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@android:drawable/ic_menu_month">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtBillDateText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext"
                android:cursorVisible="true"
                android:focusable="false"
                android:fontFamily="@font/acme"
                android:hint="BILL DATE"
                android:textColor="#050000"
                android:textColorHint="#050000"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtUsername"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="580dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="414dp"
            android:ems="10"
            android:inputType="none"
            android:textColorHint="#000000"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeErrorColor="#10FDF9"
            app:boxStrokeWidth="4dp"
            app:errorEnabled="false"
            app:errorTextColor="#10FDF9"
            app:hintTextColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@android:drawable/ic_menu_edit">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtUsernameText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext"
                android:cursorVisible="true"
                android:fontFamily="@font/acme"
                android:hint="ENTER USERNAME"
                android:textColor="#050000"
                android:textColorHint="#050000"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="680dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="373dp"
            android:ems="10"
            android:inputType="none|textEmailAddress"
            android:textColorHint="#000000"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeErrorColor="#10FDF9"
            app:boxStrokeWidth="4dp"
            app:errorEnabled="false"
            app:errorTextColor="#10FDF9"
            app:hintTextColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@android:drawable/sym_action_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmailText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext"
                android:cursorVisible="true"
                android:fontFamily="@font/acme"
                android:hint="ENTER YOUR EMAIL"
                android:textColor="#050000"
                android:textColorHint="#050000"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="770dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="315dp"
            android:ems="10"
            android:inputType="none|textPassword"
            android:textColorHint="#000000"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeErrorColor="#10FDF9"
            app:boxStrokeWidth="4dp"
            app:errorEnabled="false"
            app:errorTextColor="#10FDF9"
            app:hintTextColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@android:drawable/ic_menu_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPasswordText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext"
                android:cursorVisible="true"
                android:fontFamily="@font/acme"
                android:hint="ENTER PASSWORD"
                android:textColor="#050000"
                android:textColorHint="#050000"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtLocation"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="860dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="256dp"
            android:ems="10"
            android:inputType="textPersonName|text"
            android:textColorHint="#000000"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeErrorColor="#10FDF9"
            app:boxStrokeWidth="4dp"
            app:errorEnabled="false"
            app:errorTextColor="#10FDF9"
            app:hintTextColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@android:drawable/ic_menu_myplaces">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLocationText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext"
                android:cursorVisible="true"
                android:fontFamily="@font/acme"
                android:hint="ENTER YOUR LOCATION"
                android:textColor="#050000"
                android:textColorHint="#050000"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="238dp"
            android:layout_marginBottom="74dp"
            android:background="@color/colorPrimaryDark"
            android:drawableRight="@android:drawable/ic_menu_upload"
            android:text="ADD"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtLocation" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="87dp"
            android:layout_marginBottom="73dp"
            android:background="#EC1010"
            android:backgroundTint="#FD4949"
            android:drawableRight="@android:drawable/ic_delete"
            android:text="CLEAR"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnAdd"
            app:layout_constraintTop_toBottomOf="@+id/edtLocation" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="1019dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/billsimage" />

        <Spinner
            android:id="@+id/spnBillType"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="890dp"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>